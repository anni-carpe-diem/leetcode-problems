class Solution {
public:
    static bool cmp(string a, string b) {
        return a + b > b + a;
    }
    string largestNumber(vector<int>& nums) {
        vector<string> arr;

        // Convert to strings
        for (int n : nums) {
            arr.push_back(to_string(n));
        }

        // Sort using custom comparator
        sort(arr.begin(), arr.end(), cmp);

        // Edge case: if largest is "0"
        if (arr[0] == "0") return "0";

        // Build result
        string result;
        for (string &s : arr) {
            result += s;
        }

        return result;
    }
};